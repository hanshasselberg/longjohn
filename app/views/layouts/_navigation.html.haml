- controller = params[:controller]
.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.i-bar
        %span.i-bar
        %span.i-bar
      %a.brand{:href => "#"}Longjohn
      .container.nav-collapse
        %ul.nav
          %li{class: "#{'active' if controller == 'start'}"}
            = link_to "Home", root_path
          %li.dropdown{class: "#{'active' if controller =~ /studio/}"}
            %a.dropdown-toggle{href: '#'} Studio
            %ul.dropdown-menu
              %li
                %a{href: '#'} Reservation
          %li.dropdown{class: "#{'active' if controller =~ /equipment/}"}
            %a.dropdown-toggle{href: '#'} Equipment
            %ul.dropdown-menu
              %li
                = link_to "Reservation", equipment_reservations_path
              %li
                = link_to "Pick up", equipment_pick_ups_path
              %li
                = link_to "Return", equipment_returns_path
          %li
            %a{href: '#'} Projects
        %ul.nav.pull-right
          - if current_user
            %li
              %a{href: '#'}= current_user.email
            %li
              = link_to "Log out", log_out_path
          - else
            %li
              = link_to "Log in", log_in_path
            %li
              = link_to "Sign up", sign_up_path
