.topbar
  .topbar-inner
    .container
      %h3
        %a Longjohn
      %ul.nav
        %li.active
          = link_to "Home", root_path
        %li.dropdown
          %a.dropdown-toggle{href: '#'} Studio
          %ul.dropdown-menu
            %li
              %a{href: '#'} Reservation
        %li.dropdown
          %a.dropdown-toggle{href: '#'} Equipment
          %ul.dropdown-menu
            %li
              = link_to "Reservation", equipment_reservations_path
