= form_for [:admin, device], html: { class: 'form-horizontal' } do |f|
  %fieldset
    .control-group
      = f.label :kind, t(:"views.admin.device._form.kind")
      .controls
        .input
          = f.text_field :kind
    .control-group
      = f.label :company, t(:"views.admin.device._form.company")
      .controls
        .input
          = f.text_field :company
    .control-group
      = f.label :model, t(:"views.admin.device._form.model")
      .controls
        .input
          = f.text_field :model
    .control-group
      = f.label :barcode, t(:"views.admin.device._form.barcode")
      .controls
        .input
          = f.text_field :barcode
    .form-actions
      %input.btn-primary{type: 'submit', value: t(:"views.admin.device._form.submit")}
