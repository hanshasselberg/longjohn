.page-header
  %h1
    Device
    %small Change the device.
%br
= form_for [:admin, device], html: { class: 'form-horizontal' } do |f|
  %fieldset
    .control-group
      = f.label :kind
      .controls
        .input
          = f.text_field :kind
    .control-group
      = f.label :company
      .controls
        .input
          = f.text_field :company
    .control-group
      = f.label :model
      .controls
        .input
          = f.text_field :model
    .control-group
      = f.label :barcode
      .controls
        .input
          = f.text_field :barcode
    .form-actions
      %input.btn-primary{type: 'submit'}
