/ %h1 Log in
/ = form_tag sessions_path do
/   %p
/     = label_tag :email
/     %br/
/     = text_field_tag :email, params[:email]
/   %p
/     = label_tag :password
/     %br/
/     = password_field_tag :password
/   %p.button= submit_tag "Log in"

%form{:action => "/sessions", :method => "post"}
  %fieldset
    %legend Log in
    .clearfix
      %label{for: 'mail'} Email
      .input
        %input.large#email{type: 'text', name: 'user[email]'}
    .clearfix
      %label{for: 'password'} Password
      .input
        %input.large#password{type: 'password', name: 'user[password]'}
    .actions
      %input.btn.primary{type: 'submit'}
