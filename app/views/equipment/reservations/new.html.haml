.page-header
  %h1
    New Equipment Reservation
    %small Please add the equipment you need.

%br
%form
  .inline-inputs
    Name
    %input#name{type: 'text', name: 'reservation[name]', value: params[:reservation][:name], disabled: true}
    from
    %input.medium{:type => "text", name: 'reservation[from]', value: params[:reservation][:from], disabled: true}
    to
    %input.medium{:type => "text", name: 'reservation[to]', value: params[:reservation][:to], disabled: true}

%h4 Available Devices

%table#available_models
  %thead
    %tr
      %th{width: '15%'} Kind
      %th{width: '25%'} Company
      %th{width: '35%'} Model
      %th{width: '25%'} Count
  %tbody

%h4 Added Devices
%table#added_models
  %thead
    %tr
      %th{width: '15%'} Kind
      %th{width: '25%'} Company
      %th{width: '35%'} Model
      %th{width: '25%'} Count
  %tbody

%input.btn.primary{type: 'submit'}
