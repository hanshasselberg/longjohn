.page-header
  %h1
    Equipment Reservation
    %small Yeah, this is it.

%br
%form
  .inline-inputs
    Name
    %input{type: 'text', value: @reservation.name, disabled: true}
    from
    %input.medium{:type => "text", value: @reservation.from.in_time_zone.strftime('%d.%m.%Y %H:%M'), disabled: true}
    to
    %input.medium{:type => "text", value: @reservation.to.in_time_zone.strftime('%d.%m.%Y %H:%M'), disabled: true}

%h4 Reserved Devices
%table
  %thead
    %tr
      %th{width: '15%'} Kind
      %th{width: '25%'} Company
      %th{width: '35%'} Model
      %th{width: '25%'} Count
  %tbody
    - @reservation.reservations.each do |model|
      %tr
        %td= model['kind']
        %td= model['company']
        %td= model['model']
        %td= model['count']

%form{:action => "/equipment/reservations/#{@reservation._id}", :method => "post"}
  %input{:name => "_method", :type => "hidden", :value => "delete"}
  %input.btn.danger{type: 'submit', value: 'Destroy'}
  %a.btn.reset{href: equipment_reservations_path} Back

